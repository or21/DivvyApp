<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp" >
 
    <ImageView
        android:id="@+id/img"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@null"
        android:gravity="center_vertical" />
 
    <RelativeLayout
        android:id="@+id/layout_item_car"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
 
        <LinearLayout
            android:id="@+id/layout_car_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/wallet_bright_foreground_holo_light"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>
 
        <LinearLayout
            android:id="@+id/layout_car_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_car_model"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
            	<TextView
            	    android:id="@+id/txt_storeid"
            	    android:layout_width="0dp"
            	    android:layout_height="wrap_content"
            	    android:layout_weight="0.22"
            	    android:textAppearance="?android:attr/textAppearanceMedium"
            	    android:textStyle="normal" />

        </LinearLayout>
 
        <LinearLayout
            android:id="@+id/layout_car_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_car_color"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_claimedBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>
 
</LinearLayout>
 